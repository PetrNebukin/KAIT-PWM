<Page
    x:Class="PracticalWorksManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PracticalWorksManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
        
        <Image Source="Assets/Square150x150Logo.scale-200.png" Grid.Row="1" Grid.Column="1" Height="100" Width="150"/>

        <Button Content="Группы" Click="GroupsButton_Click" Margin="25,10,0,0" Width="450"/>
        <Button Content="Студенты" Click="StudentsButton_Click" Margin="25,10,0,0" Width="450"/>
        <Button Content="Практические работы" Click="AssignmentsButton_Click" Margin="25,10,0,0" Width="450"/>
        <Button Content="Дедлайны" Click="DeadlinesButton_Click" Margin="25,10,0,10" Width="450"/>
        <TextBlock Text="Пользователь: " x:Name="UserName" Loaded="TextBlock_Loaded" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" TextAlignment="Center" />
    </StackPanel>
</Page>